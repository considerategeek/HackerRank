#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
# include <string>
using namespace std;


int main(){
     int n,i;
    cin >> n;

    for (i=0;i <n; i++){
    string spac (n-1-i,' ');
    string sharp (i+1, '#');
        cout << spac << sharp << endl;
    }
    return 0;
}
